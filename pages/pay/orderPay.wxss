/*actionsheet  */
@import "/template/actionsheet/actionsheet";
@import "/template/password/payPassword";

/* pages/pay/pay.wxss */

.address, .toStore, .tenant {
  margin-top: 1.33vw;
}

.address_icon {
  margin-top: 1em;
}

.tenant .center {
  padding-left: 25px;
  position: relative;
}

.tenant .center text {
  position: absolute;
  left: 0;
  top: 0;
}

.product {
  background: #f9f9f9;
  -webkit-justify-content: space-between;
  -moz-justify-content: space-between;
  justify-content: space-between;
}

.product .product_txt {
  padding: 5px 0 5px 2vw;
  -webkit-justify-content: space-between;
  -moz-justify-content: space-between;
  justify-content: space-between;
}

.product_img {
  width: 20vw;
  height: 20vw;
  border-radius: 10px;
}

.product_img image {
  width: 100%;
  height: 100%;
  border-radius: 10px;
}

.product .price {
  padding: 0;
  background: #f9f9f9;
}

.word {
  display: flex;
  justify-content: space-between;
  margin-top: 12%;
  box-sizing: border-box;
  padding: 2%;
}

.word .left {
  width: 60%;
}

.word .center {
  width: 40%;
  margin-left: auto;
}

.word input {
  display: block;
  width: 100%;
}

.reduct {
  margin-top: 1.33vw;
  margin-bottom:55px;
}

.bottom {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  padding: 0;
  z-index:888;
}

.bottom .right {
  background: #ffa73d;
  color: #fff;
  padding: 0 3%;
}

.section_gap {
  margin-top: 2%;
  padding-left: 2%;
}