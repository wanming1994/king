page {
  background: #efefef;
}

.container {
  padding: 30rpx 8% 0;
}

.container>view {
  width: 100%;
  background: #fff;
  box-sizing: border-box;
}

.flex-item {
  display: block;
}

.head {
  height: 211rpx;
  border-right: 1px solid #848484;
  border-bottom: 1px solid #848484;
  border-radius: 20rpx;
  position: relative;
  display: flex;
  align-items: stretch;
  justify-content: flex-start;
  overflow: hidden;
  padding: 0 5%;
}

.head .baseBg {
  height: 211rpx;
  width: 630rpx;
  position: absolute;
  left: 0;
  z-index: 0;
}

.head image {
  display: block;
}

.headImg {
  width: 152rpx;
  height: 152rpx;
  border: 1px solid #b9b9b9;
  overflow: hidden;
  border-radius: 50%;
  margin: auto 0;
  padding: 0;
}

.headImg::after, ::before {
  display: none;
}

.headImg image {
  width: 100%;
  height: 100%;
}

.head .details {
  margin: auto 0 auto 10%;
  position: relative;
  z-index: 1;
}

.memberRadius {
  border-radius: 10rpx;
  margin-top: 20rpx;
  overflow: hidden;
  padding: 2%;
}

.iconImg {
  display: block;
  margin: auto;
  width: 40rpx;
  height: 40rpx;
}
