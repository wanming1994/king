<view class="container">
  <view class='head'>
    <view>
      <image src='../../resources/images/home/logo.png' class=' logo'></image>
    </view>
    <view class='tr'>
      <image src='../../resources/images/home/title_right.png' class=' title_right'></image>
    </view>
  </view>
  <view class='circle'>
    <view class='circle1 tc'>
      <image src='../../resources/images/home/brand.png'></image>
      <text class='f14 '>品牌</text>
    </view>
    <view class='circle2'>
      <image src='../../resources/images/home/recommender.png'></image>
      <text class='f14 '>推荐馆</text>
    </view>
    <view class='circle3' bindtap='goVideo'>
      <image src='../../resources/images/home/video.png'></image>
      <text class='f14 '>视频</text>
    </view>
    <view class='circle4'>
      <image src='../../resources/images/home/contact.png'></image>
      <text class='f14 '>联系我们</text>
    </view>
    <view class='circle5'>
      <image src='../../resources/images/home/company.png'></image>
      <text class='f14 '>公司介绍</text>
    </view>
  </view>

  <video id="myVideo" src="https://www.sincereglobe.com/VIDEO/tianshi.mp4" poster="https://www.sincereglobe.com/VIDEO/tianshi.png">>
  </video>

  <view class='break'></view>
  <view class='imageOne productList'>
    <image src='../../resources/images/home/pic1.png' mode="widthFix"></image>
    <view class='word tc' bindtap='joinUs'>
      <text class='f14 '>加入大王推荐管领免费纸尿裤</text>
    </view>
  </view>

  <block wx:for="{{productHotList}}" wx:key="id" wx:for-item="item">
    <view class='break'></view>
    <view class='imageTwo productList' bindtap='goProductDeatil' data-id="{{item.id}}">
      <image src='{{item.primary_pic_url}}' mode="widthFix"></image>
      <view class='word tc'>
        <text class='f14 overone'>购买{{item.name}}</text>
      </view>
    </view>
  </block>

</view>